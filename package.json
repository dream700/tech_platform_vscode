{
  "name": "tech-platform",
  "displayName": "VK Tech Platform",
  "description": "Plugin for VK Tech platform",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tech-platform.helloWorld",
        "title": "Test TP extension"
      },
      {
        "command": "tech-platform.RefreshStands",
        "title": "Refresh data from stands"
      },
      {
        "command": "tech-platform.copyGlobalVarValue",
        "title": "Копировать в буфер обмена"
      },
      {
        "command": "tech-platform.InstallExtension",
        "title": "Install extension"
      },
      {
        "command": "tech-platform.checkConnection",
        "title": "Check connection to Personal stand (ping em-user-api.service.cloudcore)"
      },
      {
        "command": "tech-platform.getExtensionAvailable",
        "title": "Get available extensions"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tech-platform",
          "title": "VK Tech Platform",
          "icon": "$(lightbulb)"
        }
      ]
    },
    "views": {
      "tech-platform": [
        {
          "id": "vk-tp.HWs",
          "name": "HW list",
          "contextualTitle": "HW instance explorer"
        },
        {
          "id": "vk-tp.globalVars",
          "name": "GLOBAL VARS",
          "contextualTitle": "GLOBAL vars instance explorer"
        },
        {
          "id": "vk-tp.extension",
          "name": "Extension Available",
          "contextualTitle": "VK Tech Platform extension explorer"
        }
      ]
    },
    "menus": {
      "view/item/context": [
          {
            "command": "tech-platform.copyGlobalVarValue",
            "when": "(view == vk-tp.globalVars && vk-tp.globalVars) || (view==vk-tp.HWs)",
            "group": "navigation"
          },
          {
            "command": "tech-platform.InstallExtension",
            "when": "view == vk-tp.extension && vk-tp.extension",
            "group": "navigation"
          }
      ]
  }

  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "ping": "^0.4.4"
  }
}
