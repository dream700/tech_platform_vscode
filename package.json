{
  "name": "tech-platform",
  "displayName": "Tech Platform",
  "description": "Plugin for Tech platform",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tech-platform.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "tech-platform.checkConnection",
        "title": "Check connection to Personal stand (ping em-user-api.service.cloudcore)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tech-platform",
          "title": "Tech Platform extension",
          "icon": "$(lightbulb)"
        }
      ]
    },
    "views": {
      "tech-platform": [
        {
          "id": "tp.extension",
          "name": "Extension Available",
          "contextualTitle": "Tech Platform extension explorer"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "ping": "^0.4.4"
  }
}
